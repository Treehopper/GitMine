<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <e4view
            category="org.eclipse.ui"
            class="eu.hohenegger.gitmine.ui.views.StatisticsView"
            icon="icons/sample.gif"
            id="eu.hohenegger.gitmine.ui.statistics"
            name="Git Repository Statistics"
            restorable="true">
      </e4view>
      <e4view
            category="org.eclipse.ui"
            class="eu.hohenegger.gitmine.ui.views.TimeLapseView"
            icon="icons/sample.gif"
            id="eu.hohenegger.gitmine.ui.timelapse"
            name="Time Lapse View"
            restorable="true">
      </e4view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <showInPart
               id="eu.hohenegger.gitmine.ui.statistics"></showInPart>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?after=branch">
         <command
               commandId="eu.hohenegger.gitmine.ui.RunGitMiner"
               label="Open Git Miner"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.hohenegger.gitmine.ui.RunGitMiner"
            name="Git Miner">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.hohenegger.gitmine.ui.handlers.OpenGitMinerWrapper"
            commandId="eu.hohenegger.gitmine.ui.RunGitMiner">
      </handler>
   </extension>
</plugin>
