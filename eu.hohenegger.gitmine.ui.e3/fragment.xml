<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?after=branch">
         <command
               commandId="eu.hohenegger.gitmine.ui.RunGitMiner"
               label="Open Git Miner"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.hohenegger.gitmine.ui.RunGitMiner"
            name="Git Miner">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.hohenegger.gitmine.ui.handlers.OpenGitMinerWrapper"
            commandId="eu.hohenegger.gitmine.ui.RunGitMiner">
      </handler>
   </extension>

</fragment>
